<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Comunidad</h3>
        </div>
        <div class="card-body">
            <form action="/comunidades/editar-comunidad/{{comunidad.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <textarea type="text" name="comunidad" class="form-control" placeholder="Nombre de la comunidad"
                        autofocus>{{comunidad.comunidad}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>