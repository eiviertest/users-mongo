{{#if comunidades}}
<a href="/comunidades/agregar" class="btn btn-primary m-4 mx-auto">Agregar comunidad</a>
<div class="table-responsive">
    <table class="table table-dark col-md-7 mx-auto">
        <thead class="thead-dark">
            <tr>
                <th class="lead">Nombre de comunidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each comunidades}}
            <tr>
                <td>{{comunidad}}</td>
                <td>
                    <a href="/comunidades/editar/{{_id}}"><i class="fa fa-pencil fa-lg"></i></a>
                    <a href="/comunidades/eliminar/{{_id}}"><i class="fas fa-trash fa-lg"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div class="row">
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola</h1>
            <p class="lead">AÃºn no hay comunidades registradas</p>
            <a href="/comunidades/agregar" class="btn btn-success btn-block">Agregar una</a>
        </div>
    </div>
</div>
{{/if}}